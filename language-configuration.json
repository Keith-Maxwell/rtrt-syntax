{
    "comments": {
        // symbol used for single line comment. Remove this entry if your language does not support line comments
        "lineComment": "--",
        // symbols used for start and end a block comment. Remove this entry if your language does not support block comments
        //"blockComment": [ "/*", "*/" ]
    },
    // symbols used as brackets
    "brackets": [
        ["{", "}"],
        ["[", "]"],
        ["(", ")"]
    ],
    // symbols that are auto closed when typing
    "autoClosingPairs": [
        ["{", "}"],
        ["[", "]"],
        ["(", ")"],
        { "open": "'", "close": "'", "notIn": ["string", "comment"] },
        { "open": "\"", "close": "\"", "notIn": ["string"] },
        { "open": "/*", "close": " */", "notIn": ["string"] }
    ],
    // symbols that can be used to surround a selection
    "surroundingPairs": [
        ["{", "}"],
        ["[", "]"],
        ["(", ")"],
        ["\"", "\""],
        ["'", "'"],
        ["`", "`"]
    ],
    "folding": {
        "markers": {
            "start": "^\\s*TEST\\b|^\\s*SERVICE\\b|^\\s*ELEMENT\\b|^\\s*DEFINE\\b|^\\s*ENVIRONMENT\\b",
            "end": "^\\s*END\\s+TEST\\b|^\\s*END\\s+SERVICE\\b|^\\s*END\\s+ELEMENT\\b|^\\s*END\\s+DEFINE\\b|^\\s*END\\s+ENVIRONMENT\\b"
        }
    },
    "onEnterRules": [
        {
            "beforeText": "^\\s*SERVICE\\s+.+",
            "action": {
                "indent": "indentOutdent",
                "appendText": "\nEND SERVICE"
            }
        }
    ]
}
